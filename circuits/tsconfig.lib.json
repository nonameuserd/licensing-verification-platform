{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "circuits/dist",
    "declaration": true,
    "types": ["node"],
    "composite": true,
    "incremental": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**"
  ],
  "references": [
    { "path": "../shared/tsconfig.lib.json" },
    { "path": "../protobuff/tsconfig.lib.json" }
  ]
}
