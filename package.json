{
  "name": "@licensing-verification-platform/source",
  "version": "0.0.1",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "compile-circuits": "docker build -t lvp-circuits -f circuits/Dockerfile . && docker run --rm -v $(pwd):/work -w /work lvp-circuits npm run compile --prefix /work/circuits",
    "test": "nx run-many --target=test --all && nx run-many --target=e2e --all",
    "ci": "yarn install --frozen-lockfile && yarn lint && yarn build && yarn test",
    "lint": "nx run-many --target=lint --all",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "private": true,
  "workspaces": [
    "backend",
    "backend-e2e",
    "circuits",
    "frontend",
    "admin-dashboard",
    "employer-portal",
    "protobuff",
    "shared",
    "infrastructure"
  ],
