{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@licensing-verification-platform/protobuff": ["protobuff/src/index.ts"],
      "@licensing-verification-platform/shared": ["shared/src/index.ts"],
      "@licensing-verification-platform/circuits": ["circuits/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
